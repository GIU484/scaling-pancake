{
  "manifest_version": 3,
  "name": "psychic-guacamole ðŸ’•",
  "version": "1.2",
  "description": "Text Exapnder replacement",
  "permissions": [
    "storage", 
    "unlimitedStorage",
    "activeTab", 
    "scripting"
  ],
  "optional_permissions": [],

  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16":"icons/uwu16.png",
    "128": "icons/uwu.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_popup_width": 700,  
    "default_popup_height": 1000,
    "default_icon": {
      "16":"icons/uwu16.png",
      "128": "icons/uwu.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>",
      "https://joshyboo.zendesk.com/"
      ],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_end"
    }
  ],
  "commands": {
    "expand_shortcut": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      },
      "description": "Trigger text expansion"
    }
  }
}